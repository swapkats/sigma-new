{
  "name": "sigma-ai-chat",
  "version": "1.0.0",
  "description": "Local AI chat app with knowledge graph memory",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:renderer\" \"wait-on http://localhost:3000 && electron .\"",
    "dev:renderer": "cd src/renderer && npm start",
    "build": "npm run build:renderer && electron-builder",
    "build:renderer": "cd src/renderer && npm run build",
    "postinstall": "cd src/renderer && npm install"
  },
  "keywords": ["ai", "chat", "electron", "local", "privacy"],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "concurrently": "^8.0.0",
    "wait-on": "^7.0.0"
  },
  "dependencies": {
    "node-llama-cpp": "^2.7.0",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.0"
  },
  "build": {
    "appId": "com.sigma.ai-chat",
    "productName": "Sigma AI Chat",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*"
    ]
  }
}