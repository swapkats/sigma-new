{
  "name": "sigma-ai-chat",
  "version": "1.0.0",
  "description": "Local AI chat app with knowledge graph memory",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:renderer\" \"wait-on http://localhost:3000 && electron .\"",
    "dev:renderer": "cd src/renderer && npm start",
    "build": "npm run build:renderer && electron-builder",
    "build:renderer": "cd src/renderer && npm run build",
    "postinstall": "cd src/renderer && npm install"
  },
  "keywords": ["ai", "chat", "electron", "local", "privacy"],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "concurrently": "^8.0.0",
    "wait-on": "^7.0.0"
  },
  "dependencies": {
    "uuid": "^9.0.0"
  },
  "build": {
    "appId": "com.sigma.ai-chat",
    "productName": "Sigma AI Chat",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "!src/renderer/node_modules",
      "!src/renderer/src",
      "!src/renderer/public",
      "src/renderer/build/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ]
    },
    "extraResources": [
      {
        "from": "data",
        "to": "data",
        "filter": ["**/*"]
      },
      {
        "from": "models",
        "to": "models",
        "filter": ["**/*"]
      }
    ]
  }
}